{
  "include": [
    "src/**/*", "test.js",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "compilerOptions": {
    "noImplicitAny": true,
    "target": "es5",
    "moduleResolution": "Node",
    "declaration": true,
    "suppressImplicitAnyIndexErrors": true
  },
  "typedocOptions": {
    "mode": "library",
    "out": "docs",
  }
}